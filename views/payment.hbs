<section>
  <h1 class="sr-only">Checkout</h1>

  <div class="relative mx-auto max-w-screen-2xl">
    <div class="grid grid-cols-1 md:grid-cols-2">
      <div class="py-12 bg-gray-50 md:py-24">
        <div class="max-w-lg px-4 mx-auto lg:px-8">
          <div class="flex items-center">
            <span class="w-10 h-10 bg-sky-500 rounded-full"></span>

            <h2 class="ml-6 font-medium text-xl ">Städa Fint</h2>
          </div>

          <div class="mt-8">
            <p class="text-2xl font-medium tracking-tight">899kr</p>
            <p class="mt-1 text-sm text-gray-500">Din varukorg</p>
          </div>

          <div class="mt-12">
            <div class="flow-root">
              <ul class="-my-4 divide-y divide-gray-200">
                <li class="flex items-center justify-between py-4">
                  <div class="flex items-start">
                    <img
                      class="flex-shrink-0 object-cover w-16 h-16 rounded-lg"
                      src="/images/basic_clean.jpeg"
                      alt=""
                    />

                    <div class="ml-4">
                      <p class="text-sm">Basic städning</p>

                      <dl class="mt-1 space-y-1 text-xs text-gray-500">
                        <div>
                          <dt class="inline">Datum:</dt>
                          <dd class="inline">1/4</dd>
                        </div>

                        <div>
                          <dt class="inline">Tid:</dt>
                          <dd class="inline">Förmiddag 8-12</dd>
                        </div>
                      </dl>
                    </div>
                  </div>

                  <div>
                    <p class="text-sm">
                      899kr
                      <small class="text-gray-500">x1</small>
                    </p>
                  </div>
                </li>

            
    
            </div>
          </div>
        </div>
      </div>

      <div class="py-12 bg-white md:py-24">
        <div class="max-w-lg px-4 mx-auto lg:px-8">
          <form class="grid grid-cols-6 gap-4">
            <div class="col-span-3">
              <label class="block mb-1 text-sm text-gray-600" for="first_name">
                Förnamn
              </label>

              <input
                class="rounded-lg shadow-sm border-gray-200 w-full text-sm p-2.5"
                type="text"
                id="frst_name"
              />
            </div>

            <div class="col-span-3">
              <label class="block mb-1 text-sm text-gray-600" for="last_name">
                Efternamn
              </label>

              <input
                class="rounded-lg shadow-sm border-gray-200 w-full text-sm p-2.5"
                type="text"
                id="last_name"
              />
            </div>

            <div class="col-span-6">
              <label class="block mb-1 text-sm text-gray-600" for="email">
                Email
              </label>

              <input
                class="rounded-lg shadow-sm border-gray-200 w-full text-sm p-2.5"
                type="email"
                id="email"
              />
            </div>

            <div class="col-span-6">
              <label class="block mb-1 text-sm text-gray-600" for="phone">
                Telefon
              </label>

              <input
                class="rounded-lg shadow-sm border-gray-200 w-full text-sm p-2.5"
                type="tel"
                id="phone"
              />
            </div>

            <fieldset class="col-span-6">
              <legend class="block mb-1 text-sm text-gray-600">
                Kortuppgifter
              </legend>

              <div class="-space-y-px bg-white rounded-lg shadow-sm">
                <div>
                  <label class="sr-only" for="card-number">Kortnummer</label>

                  <input
                    class="border-gray-200 relative rounded-t-lg w-full focus:z-10 text-sm p-2.5 placeholder-gray-400"
                    type="text"
                    name="card-number"
                    id="card-number"
                    placeholder="Card number"
                  />
                </div>

                <div class="flex -space-x-px">
                  <div class="flex-1">
                    <label class="sr-only" for="card-expiration-date">
                      Utgångsdatum
                    </label>

                    <input
                      class="border-gray-200 relative rounded-bl-lg w-full focus:z-10 text-sm p-2.5 placeholder-gray-400"
                      type="text"
                      name="card-expiration-date"
                      id="card-expiration-date"
                      placeholder="MM / YY"
                    />
                  </div>

                  <div class="flex-1">
                    <label class="sr-only" for="card-cvc">CVC</label>

                    <input
                      class="border-gray-200 relative rounded-br-lg w-full focus:z-10 text-sm p-2.5 placeholder-gray-400"
                      type="text"
                      name="card-cvc"
                      id="card-cvc"
                      placeholder="CVC"
                    />
                  </div>
                </div>
              </div>
            </fieldset>

            <fieldset class="col-span-6">
              <legend class="block mb-1 text-sm text-gray-600">
                Faktura adress
              </legend>

              <div class="-space-y-px bg-white rounded-lg shadow-sm">
                <div>
                  <label class="sr-only" for="country">Region</label>

                  <select
                    class="border-gray-200 relative rounded-t-lg w-full focus:z-10 text-sm p-2.5"
                    id="country"
                    name="country"
                    autocomplete="country-name"
                  >
                    <option>Stockholm</option>
                    <option>Uppsalalän</option>
                    <option>Östergötland</option>
                    <option>Södermanland</option>
                    <option>Gotland</option>
                   
                  </select>
                </div>

                <div>
                  <label class="sr-only" for="postal-code">
                   Postnr
                  </label>

                  <input
                    class="border-gray-200 relative rounded-b-lg w-full focus:z-10 text-sm p-2.5 placeholder-gray-400"
                    type="text"
                    name="postal-code"
                    id="postal-code"
                    autocomplete="postal-code"
                    placeholder="ZIP/Post Code"
                  />
                </div>
              </div>
            </fieldset>

    <div class="flex flex-row flex-initial space-x-4">
        <div class="inline-flex items-center -space-x-px text-xs rounded-md">
        <button
    class="px-5 py-3 font-medium border rounded-l-md hover:z-10 focus:outline-none focus:border-indigo-600 focus:z-10 hover:bg-sky-500 active:opacity-75"
    type="button">
    Betala
        </button>
    </div>
         </div>     
          </form>
          <div class="flex flex-row flex-initial space-x-4 pt-6">
<button
    class="px-5 py-3 font-medium border rounded-r-md hover:z-10 focus:outline-none focus:border-indigo-600 focus:z-10 hover:bg-sky-500 active:opacity-75"
    type="button">
    Betala med faktura
         </button>
          </div>
        
      </div>
    </div>
  </div>
</section>